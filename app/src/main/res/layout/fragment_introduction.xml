<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f6ef">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Welcome to the C Course"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageStudy"
        app:layout_constraintVertical_bias="0.10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="This course includes"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textScaleX="1.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageStudy"
        app:layout_constraintVertical_bias="0.350" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="\n\n✨ AI assistance for guided coding\n📚 Projects to apply new skills\n🎯 Quizzes to test your knowledge\n📈 Progress tracking\n🏆 Certificate of completion"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintVertical_bias="0.250" />

    <ImageView
        android:id="@+id/imageStudy"
        android:layout_width="272dp"
        android:layout_height="149dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051"
        app:srcCompat="@drawable/image_study" />

    <Button
        android:id="@+id/clientNext"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/rectangle_blue"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintVertical_bias="0.612" />

</androidx.constraintlayout.widget.ConstraintLayout>
