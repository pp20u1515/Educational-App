<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuBar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#4E5567"
    android:visibility="visible">

    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:src="@drawable/baseline_menu_24"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:contentDescription="Open menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/menuDiamond"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/small_diamond"
                android:scaleType="fitCenter"
                android:contentDescription="Diamonds"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/diamondCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/menuDiamond"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"
                tools:text="9999"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/tvIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/small_television"
        android:elevation="5dp"
        android:contentDescription="Small TV"
        app:layout_constraintTop_toTopOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="@id/cardView"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>